{
  "$schema": "https://raw.githubusercontent.com/justeat/httpclient-interception/fa8cee60cbebfa7890d50eac53001ac1f94f045a/src/HttpClientInterception/Bundles/http-request-bundle-schema.json",
  "items": [
    {
      "uri": "https://api.amazon.com/auth/o2/token",
      "method": "POST",
      "contentFormat": "json",
      "contentJson": {
        "access_token": "secret-access-token",
        "token_type": "access",
        "refresh_token": "secret-refresh-token",
        "expires_in": "300"
      }
    },
    {
      "uri": "https://api.amazon.com/user/profile?fields=email,name,user_id",
      "contentFormat": "json",
      "contentJson": {
        "user_id": "my-id",
        "name": "John Smith",
        "email": "john@john-smith.local"
      }
    }
  ]
}
